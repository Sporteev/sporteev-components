{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "target": "ESNext",
    "esModuleInterop": true,
    "module": "ESNext",
    "declarationDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
